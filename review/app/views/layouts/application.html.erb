<!DOCTYPE html>
<html>
<head>
  <title>Review</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors] %>
  <% flash[:errors].each do |e|%>
    <p><%= e %></p>
  <% end %>
<% end %>

<% if current_user %>
  <a href="/sessions" data-method="delete">Log out</a>
<% end %>

<%= yield %>

</body>
</html>
